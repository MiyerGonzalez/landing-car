<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-terms"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "/terms.webp"
  } else {
    imageElement.src = "/terms.avif"
  }
</script>